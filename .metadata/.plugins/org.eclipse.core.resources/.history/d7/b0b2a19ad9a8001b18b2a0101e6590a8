        <div class="layui-fluid">
            <div class="layui-row layui-col-space15">
                <div class="layui-col-md12">
                    <div class="layui-card">
                        <div class="layui-card-body ">
                            <div id="main" style="width: 100%;height:400px;"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script src="https://cdn.bootcss.com/echarts/4.2.1-rc1/echarts.min.js"></script>
        <script src="https://cdn.bootcss.com/echarts/4.2.1-rc1/extension/bmap.min.js"></script>
        <script>
            // 基于准备好的dom，初始化echarts实例
            var myChart = echarts.init(document.getElementById('main'));

            var devStatus = "设备未运行";
            var complete_pg = 0;
            var uncomplete_pg = 0;

            layui.use(['layer'],
            function() {
                $ = layui.jquery;
                layer = layui.layer;

                $.ajax({
                    type:'get',
                    url:'/home/factory/device/show/show-echarts',
                    success: function (res) {
                        if (res.code == 20000) {
                            if (res.data["status"] == "未运行") {
                                devStatus = "设备未运行";
                            } else {
                                devStatus = "设备生产中";
                            }

                            complete_pg = parseInt(res.data["progress"]);
                            uncomplete_pg = 100-complete_pg;
                            alert(complete_pg);
                            
                         // 指定图表的配置项和数据
                            option = {
                                backgroundColor: '#2c343c',

                                title: {
                                    text: devStatus,
                                    left: 'center',
                                    top: 20,
                                    textStyle: {
                                        color: '#ccc'
                                    }
                                },

                                tooltip : {
                                    trigger: 'item',
                                    formatter: "{a} <br/>{b} : {c} ({d}%)"
                                },

                                visualMap: {
                                    show: false,
                                    min: 80,
                                    max: 600,
                                    inRange: {
                                        colorLightness: [0, 1]
                                    }
                                },
                                series : [
                                    {
                                        name:devStatus,
                                        type:'pie',
                                        radius : '55%',
                                        center: ['50%', '50%'],
                                        data:[
                                            {value:complete_pg, name:'已完成'},
                                            {value:uncomplete_pg, name:'未完成'}
                                        ].sort(function (a, b) { return a.value - b.value}),
                                        roseType: 'angle',
                                        label: {
                                            normal: {
                                                textStyle: {
                                                    color: 'rgba(255, 255, 255, 0.3)'
                                                }
                                            }
                                        },
                                        labelLine: {
                                            normal: {
                                                lineStyle: {
                                                    color: 'rgba(255, 255, 255, 0.3)'
                                                },
                                                smooth: 0.2,
                                                length: 10,
                                                length2: 20
                                            }
                                        },
                                        itemStyle: {
                                            normal: {
                                                color: '#c23531',
                                                shadowBlur: 200,
                                                shadowColor: 'rgba(0, 0, 0, 0.5)'
                                            }
                                        }
                                    }
                                ]
                            };


                            // 使用刚指定的配置项和数据显示图表。
                            myChart.setOption(option);
                        }
                    },
                    error: function (res) {
                        //var errorData = JSON.stringify(res);
                        alert("error:通信错误");
                    }
                });
            });

            
        </script>
        <script>
            var _hmt = _hmt || [];
            (function() {
            var hm = document.createElement("script");
            hm.src = "https://hm.baidu.com/hm.js?b393d153aeb26b46e9431fabaf0f6190";
            var s = document.getElementsByTagName("script")[0]; 
            s.parentNode.insertBefore(hm, s);
            })();
        </script>
