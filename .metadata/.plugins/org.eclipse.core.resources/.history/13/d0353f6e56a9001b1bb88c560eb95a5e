    <script type="text/html" id="operate-ba">
    	{{#  if(d.status == "未运行"){ }}
    	<a class="layui-btn layui-btn-warm layui-btn-xs" lay-event="start">开始生产</a>
    	{{#  } else if(d.status == "进行中"){ }}
    	<a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="stop">停止</a>
