    <script>layui.use(['laydate', 'form', 'table'],
        function() {
            var laydate = layui.laydate;
            var table = layui.table;

            //执行一个laydate实例
            laydate.render({
                elem: '#start' //指定元素
            });

            //执行一个laydate实例
            laydate.render({
                elem: '#end' //指定元素
            });
            
            
            table.render({
                elem:"#order-tb",
                url:"/home/factory/order/show/select_byfacid",
                method: 'post',
                dataType:'json',
                contentType: 'application/json;charset=UTF-8',
                page: true, //开启分页
                limit: 2,
                limits: [2, 3, 4],
                cols: [[
                    {field:'ord_name', width:200, title: '订单编号', align:'center', sort: true},
                    {field:'description', width:100,align:'center', edit:'cgdesc', title: '描述'},
                    {field:'dev_id', align:'center', title: '设备编号'},
                    {field:'prod_name', align:'center', title: '产品'},
                    {field:'status', align:'center', title: '生产状态'},
                    {field:'progress', title: '生产进度', align: 'center', event: 'chart', templet: function(d){
                        //***重点***:判断颜色
                        var ys = '';
                    	if (d.status == "未运行") {
                    		ys='layui-font-gray';
                    	}else if(50 < d.progress && d.progress < 99){
                            ys='layui-bg-orange';
                        }else if(d.progress >= 0 && d.progress <= 50){
                            ys='layui-bg-red';
                        }else if(d.progress == 100){
                        	ys='layui-bg-green';
                        };
						//***重点***：拼接进度条
                        return '<div class="layui-progress layui-progress-big" lay-showpercent="true"><div class="layui-progress-bar '+ys+'" lay-percent="'+d.progress+'%"></div></div><br>'
                    }},
                    {field:'price', align:'center', title: '订单价格'},
                    {field:'pay_status', align:'center', title: '支付状态'},
                    {field:'pay_func', align:'center', title: '支付方式'},
                    {field:'receiver', align:'center', edit:'cguser', title: '交付人'},
                    {field:'phone', align:'center', edit:'cgphone', title: '电话'},
                    {field:'location', width:100, align:'center', title: '地址'},
                    //{fixed: 'right', width:200, align:'center', toolbar: '#barDemo'}
                ]],
                request: {
                    pageName: 'pageNum', //页码的参数名称，默认：page
                    limitName: 'pageSize' //每页数据量的参数名，默认：limit
                },
                parseData: function (res) { //将原始数据解析成 table 组件所规定的数据
                    return {
                        "code": res.status, //解析接口状态
                        "msg": res.message, //解析提示文本
                        "count": res.totalSize, //解析数据长度
                        "data": res.content //解析数据列表
                    };
                }
                ,done:function (res,currentCount) {
    				//***重点***：table渲染完成后渲染element进度条
                    element.render()
                }
            });
            
            
            table.on('tool(ord-tb)', function(obj){
				var data = obj.data;
				if (obj.event == 'chart') {
					$.ajax({
		            	type:'post',
		            	url:'/home/factory/device/show/select-device',
		            	data:{
		      				"dev_id":data.dev_id
		                },
		            	success: function (res){
		            		xadmin.open('表格','/chart-yuan.html',600,600)
		            	},
		                error: function (res) {
		                    alert("error:通信错误");
		                }
		            })
		     	}
		    });
            
            
            table.on('edit(cgdesc)', function(obj){
                var value = obj.value //得到修改后的值
                ,data = obj.data //得到所在行所有键值
                ,field = obj.field; //得到字段
                //layer.msg('[ID: '+ data.id +'] ' + field + ' 字段更改为：'+ value);
                $.ajax({
                	type:'post',
                	url:'/home/factory/order/show/order-change',
                	data:{
                        "ord_name":data.ord_name,
                        "description":value,
                        "receiver":null,
                        "phone":null
                    },
                	success: function (res){
                		layer.alert("修改成功", {
                            icon: 6
                        },
                        function() {
                        });
                	},
                    error: function (res) {
                        alert("error:通信错误");
                    }
                })
            });
            
            table.on('edit(cguser)', function(obj){
            	var value = obj.value //得到修改后的值
                ,data = obj.data //得到所在行所有键值
                ,field = obj.field; //得到字段
                //layer.msg('[ID: '+ data.id +'] ' + field + ' 字段更改为：'+ value);
                $.ajax({
                	type:'post',
                	url:'/home/factory/order/show/order-change',
                	data:{
                        "ord_name":data.ord_name,
                        "description":null,
                        "receiver":value,
                        "phone":null
                    },
                	success: function (res){
                		layer.alert("修改成功", {
                            icon: 6
                        },
                        function() {
                        });
                	},
                    error: function (res) {
                        alert("error:通信错误");
                    }
                })
            });
            
            table.on('edit(cgphone)', function(obj){
            	var value = obj.value //得到修改后的值
                ,data = obj.data //得到所在行所有键值
                ,field = obj.field; //得到字段
                //layer.msg('[ID: '+ data.id +'] ' + field + ' 字段更改为：'+ value);
                $.ajax({
                	type:'post',
                	url:'/home/factory/order/show/order-change',
                	data:{
                        "ord_name":data.ord_name,
                        "description":value,
                        "receiver":null,
                        "phone":null
                    },
                	success: function (res){
                		layer.alert("修改成功", {
                            icon: 6
                        },
                        function() {
                        });
                	},
                    error: function (res) {
                        alert("error:通信错误");
                    }
                })
            });
            
        });
    


        /*用户-停用*/
        function member_stop(obj, id) {
            layer.confirm('确认要停用吗？',
            function(index) {

                if ($(obj).attr('title') == '启用') {

                    //发异步把用户状态进行更改
                    $(obj).attr('title', '停用');
                    $(obj).find('i').html('&#xe62f;');

                    $(obj).parents("tr").find(".td-status").find('span').addClass('layui-btn-disabled').html('已停用');
                    layer.msg('已停用!', {
                        icon: 5,
                        time: 1000
                    });

                } else {
                    $(obj).attr('title', '启用');
                    $(obj).find('i').html('&#xe601;');

                    $(obj).parents("tr").find(".td-status").find('span').removeClass('layui-btn-disabled').html('已启用');
                    layer.msg('已启用!', {
                        icon: 5,
                        time: 1000
                    });
                }

            });
        }

        /*用户-删除*/
        function member_del(obj, id) {
            layer.confirm('确认要删除吗？',
            function(index) {
                //发异步删除数据
                $(obj).parents("tr").remove();
                layer.msg('已删除!', {
                    icon: 1,
                    time: 1000
                });
            });
        }

        function delAll(argument) {

            var data = tableCheck.getData();

            layer.confirm('确认要删除吗？' + data,
            function(index) {
                //捉到所有被选中的，发异步进行删除
                layer.msg('删除成功', {
                    icon: 1
                });
                $(".layui-form-checked").not('.header').parents('tr').remove();
            });
        }</script>

