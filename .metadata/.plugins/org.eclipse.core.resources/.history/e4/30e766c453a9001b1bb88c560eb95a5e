        <script>layui.use(['form', 'layer'],
            function() {
                $ = layui.jquery;
                var form = layui.form,
                layer = layui.layer;

                //自定义验证规则
                form.verify({
                    numberlimit: function(value) {
                        if (isNaN(value)) {
                            return "请输入纯数字";
                        }
                        if (parseInt(value)==0 || parseInt(value)>100) {
                            return "一次最多增加100台"
                        }
                    },
                });

                //监听提交
                form.on('submit(add)', function(data) {
                    var facname = document.getElementById('name').value
                    var location = document.getElementById('location').value
                    var user = document.getElementById('user').value
                    var phone = document.getElementById('phone').value
                    var Lemail = document.getElementById('Lemail').value
                    
                    var factory = {
                        "fac_name":facname,"fac_location":location,
                        "username":user,"phone":phone
                    };

                    alert(JSON.stringify(factory))
                    
                    $.ajax({
                        type:'POST',
                        url:'/home/factory/add-factory',
                        data:JSON.stringify(factory),
                        dataType: "json",
                        headers: {
                            'Content-Type': 'application/json;charset=UTF-8'
                        },
                        success: function (res) {
                            var successData = JSON.stringify(res)

                            alert("message: " + successData);
                            //关闭当前frame
                            xadmin.close();
                            // 可以对父窗口进行刷新 
                            xadmin.father_reload();
                        },
                        error: function (res) {
                            var errorData = JSON.stringify(res)
                            alert("error:通信错误");
                        }
                        
                    });                          
                    return false;
                });

            });</script>
