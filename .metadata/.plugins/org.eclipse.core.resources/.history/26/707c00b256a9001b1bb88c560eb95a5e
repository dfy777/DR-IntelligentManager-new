        <script>layui.use(['form', 'layer'],
            function() {
                $ = layui.jquery;
                var form = layui.form,
                layer = layui.layer;

                //监听提交
                form.on('submit(add)', function(data) {
                    //var dname = document.getElementById('shipping').value
                    $.ajax({
                        type:'POST',
                        url:'/home/factory/device/straight-start',
                        success: function (res) {
                            var successData = JSON.stringify(res);
                            
                            layer.alert(successData, {
                                icon: 6
                            },
                            function() {
                                // 获得frame索引
                                var index = parent.layer.getFrameIndex(window.name);
                                //关闭当前frame 刷新父页面
                                parent.layui.table.reload('device-tb')
                                parent.layer.close(index);
                            });
                        },
                        error: function (res) {
                            var errorData = JSON.stringify(res);
                            alert("error:通信错误");
                        }
                        
                    });                          
                    return false;
                });


                //监听提交
                form.on('submit(add-delay)', function(data) {
                    var delaytime = document.getElementById('shipping').value
                    $.ajax({
                        type:'POST',
                        url:'/home/factory/device/delay-start',
                        data: {
                            "delaytime":delaytime
                        },
                        success: function (res) {
                            var successData = JSON.stringify(res);
                            
                            layer.alert(successData, {
                                icon: 6
                            },
                            function() {
                                // 获得frame索引
                                var index = parent.layer.getFrameIndex(window.name);
                              //关闭当前frame 刷新父页面
                                parent.layui.table.reload('device-tb')
                                parent.layer.close(index);
                            });
                        },
                        error: function (res) {
                            var errorData = JSON.stringify(res);
                            alert("error:通信错误");
                        }
                        
                    });                          
                    return false;
                });

            });</script>
